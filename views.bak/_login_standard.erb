<div id="wrapper">
    <div class="nothing-else-matters">
    </div>
    <div id="logo_sunstone" style="
    background: url(<%=$views_config.logo%>) no-repeat center;
    background-size: 355px;">
    </div>
    <form id="login_form">
      <div class="border" id="login">
          <div class="content">
            <div class="login-row">
              <input type="text" size="15" name="username" id="username" class="login-input" placeholder="用户名">
            </div>
            <div class="login-row">
              <input type="password" size="15" name="password" id="password" class="login-input" placeholder="密码">
            </div>
            <div class="submit-row">
              <input type="submit" id="login_btn" value="登 录" />
              <input type="checkbox" id="check_remember" />
              <label id="label_remember" for="check_remember">下次自动登录</label>
              <img src="images/loading-spin.svg" alt="..." id="login_spinner" />
            </div>
          </div>
        <div id="error_box" class="hidden alert-box alert" style="display: none">
          <span id="error_message"></span>
        </div>
      </div>
    </form>
</div>
