html {
  font-size: 14px;
}

body {
  font-weight: normal;
}

.row {
  max-width: none;
}

#top-row {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 50px;
}

#content-row {
  padding-top: 50px;
  display: table;
  height: 100%;
  width: 100%;
}

#menu-wrapper {
  display: table-cell;
  vertical-align: top;
  height: 100%;
  width: 220px;
  padding: 0;
  border-right: 1px solid #dfdfdf;
  background-color: #f8f8f8;
}

#li_upgrade-top-tab,
#li_support-tab {
  display: none;
}

#menu #navigation {
  padding: 0;
}

#navigation > li > a {
  padding: 10px 30px;
  line-height: 18px;
}

#menu li.subTab > a {
  color: #8a8a8a;
  padding: 10px 40px;
  font-weight: normal !important;

  .fa {
    font-size: 14px;
  }
}
#menu li a {
  font-weight: normal;
}

.navigation-active-li > a {
  background-color: #dfe4e9;
  color: #2b6be1 !important;
}

.is-accordion-submenu-parent > a::after  {
  border-color: #cacaca transparent transparent;
}

#menu .nested > li:last-child {
    padding-bottom: 0;
}

#content-wrapper {
  .tab {
    margin-top: 0;
  }
}
