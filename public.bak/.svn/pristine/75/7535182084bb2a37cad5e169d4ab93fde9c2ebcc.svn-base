html {
  font-size: 14px;
}

body {
  font-weight: normal;
  min-width: 1200px;
}

.row {
  max-width: none;
}

#top-row {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 50px;
}

#content-row {
  padding-top: 50px;
  background-color: #f3f5f7;
  display: flex;
  min-height: 100%;
}

#settings-tab {
  width: 900px;
}

#menu-wrapper {
  flex: none;
  width: 220px;
  padding: 0;
  border-right: 1px solid #dfdfdf;
  background-color: #eaedef;
}

#content-wrapper {
  flex: auto;
  .tab {
    margin-top: 0;
  }
}

#addon-row {
  position: absolute;
  width: 100%;
  top: 50px;
}

#li_upgrade-top-tab,
#li_support-tab {
  display: none;
}

#menu #navigation {
  padding: 0;
}

#navigation > li > a {
  padding: 14px 30px;
  line-height: 18px;
}

#menu li.subTab > a {
  color: #8a8a8a;
  padding: 14px 40px;
  font-weight: normal !important;

  .fa {
    font-size: 14px;
  }
}
#menu li a {
  font-weight: normal;
}

.navigation-active-li > a {
  background-color: #dfe4e9;
  color: #2b6be1 !important;
}

.is-accordion-submenu-parent > a::after  {
  border-color: #cacaca transparent transparent;
}

#menu .nested > li:last-child {
    padding-bottom: 0;
}

.button.secondary {
  color: $secondary-color;
  background-color: #efefef;
  border-color: #cacaca;

  &:hover {
    border-color: #c0c0c0;
    background-color: #e0e0e0;
    color: #444;
  }
}

.button.secondary.dropdown::after {
  border-color: $secondary-color transparent transparent;
}

.button.secondary.hollow {
  border-color: transparent;
  background-color: transparent;
}

.action_blocks {
  .dropdown-pane {
    padding: 0;

    > li > a {
      color: #555;
      padding: 16px 30px;
    }

    > li > a:hover {
      color: #2b6be1;
      background-color: #dfe4e9;
    }

    .label {
      font-size: 10px;
      margin-left: 6px;
      padding: 4px 6px;
    }

    .right {
      margin-left: 6px;
    }
  }

  .labels-dropdown {
    padding: 14px;

    h6 {
      padding: 8px 0;
    }
  }
}


input::placeholder, textarea::placeholder {
  color: #666;
}

table .markrow, table .markrowchecked {
  background-color: #fbfae1;
}

table.hover tr:hover {
  background-color: #e9f2ff;
}

.tabs {
  border: 0;
}

.tabs-title > a:hover {
  background-color: #e9ecee;
}

.dataTables_info {
  font-weight: normal;
  color: #666;
}

#loading {
  margin-top: 200px;
}
